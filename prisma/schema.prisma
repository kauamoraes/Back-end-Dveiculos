// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Auth {
  id           Int      @id @default(autoincrement())
  passwordHash String
  createdAt    DateTime @default(now())
}

model Client {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String?
  cpf       String   @unique
  rg        String?
  rua       String 
  bairro    String
  cidade    String
  cep       String
  celular   String
  tipo      String
  vehicles  Vehicle[]
  sales     Sale[]
  createdAt DateTime @default(now())
}

model Vehicle {
  id            Int      @id @default(autoincrement())
  dataCompra    DateTime
  marca         String
  modelo        String
  placa         String
  anoModelo     String
  cor           String
  chassi        String
  renavan       String 
  valorCompra   Float
  km            Int
  status        String
  documentoTipo String  
  clientId      Int
  client        Client   @relation(fields: [clientId], references: [id])
  sale          Sale?
  procuracaoPath      String?
  createdAt     DateTime @default(now())
}

model Sale {
  id                  Int      @id @default(autoincrement())
  dataVenda           DateTime
  valorVenda          Float
  financiou           Boolean
  banco               String?
  possuiAlienacao     Boolean?
  valorFinanciado     Float?
  valorEntrada        Float?
  valorParcela        Float?
  quantidadeParcelas  Int?
  diaVencimento       Int?
  observacoes         String?
  clientId            Int
  vehicleId           Int   @unique
  procuracaoPath      String?
  client              Client @relation(fields: [clientId], references: [id])
  vehicle             Vehicle @relation(fields: [vehicleId], references: [id])
  createdAt           DateTime @default(now())
}
